<block wx:if="{{show}}">
  <view class="bg animated fadeIn faster"></view>
  <view class="wrap animated fadeIn">
    <view class="btns">
      <text class="text" catchtap="quit">取消</text>
      <text class="text" catchtap="validate">确定</text>
    </view>
    <x-input cursorSpacing="2" autoFocus="{{autoFocus}}" id="password" isPassword="{{true}}" inputValue="{{password}}" bind:inputChange="onInput" placeholder="{{placeholder}}"></x-input>
    <view class="tip">
      <image class="tip-img" src="./../../images/tip.png" />
      <text class="tip-text">主密码不明文存储，用于解密数据</text>
    </view>
  </view>
</block>

